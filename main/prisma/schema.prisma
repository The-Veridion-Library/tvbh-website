generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Book {
  id       String   @id @default(uuid())
  isbn     String?
  title    String
  author   String
  status   String   @default("active")
  labels   PaperLabel[]
}

model PaperLabel {
  id         String   @id @default(uuid())
  paperId    String   @unique
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     String
  status     String   @default("unassigned") // unassigned, printed
  printedAt  DateTime?
}